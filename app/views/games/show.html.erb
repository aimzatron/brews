<%- model_class = Game -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<div class="row-fluid">
  <div class="span3">
    <div class="well sidebar-nav">
      <div id="chat-content">
        <ul id="chat">
          <% @messages.each do |message| %>     
            <li><%= message["team_name"] %></li>
            <li><%= message["content"] %></li>
          <% end %>
        </ul>
      </div><!-- end of #chat-content-->
      <div id="chat-input">
        <div class="control-group">
          <%= form_for @message, :html => { :class => 'form-horizontal' } do |f| %>
            <%= f.label :content, :class => 'control-label' %>
            <%= f.text_field :content, :class => 'text_field' %>
          <% end %>
        </div>
      </div>
    </div><!--/.well -->
  </div><!--/span-->
  <div class="span9">
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
      <dd><%= @game.title %></dd>
      <dt><strong><%= model_class.human_attribute_name(:pin) %>:</strong></dt>
      <dd><%= @game.pin %></dd>
      <dt><strong><%= model_class.human_attribute_name(:question_time) %>:</strong></dt>
      <dd><%= @game.question_time %></dd>
    </dl>

    <div class="form-actions">
      <%= link_to t('.back', :default => t("helpers.links.back")),
                  games_path, :class => 'btn'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_game_path(@game), :class => 'btn' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  game_path(@game),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
    </div>
  </div>
</div>
